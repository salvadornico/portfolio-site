widthMobileOnly = '(max-width: 600px)'
widthTabletUp = '(min-width: 600px)'
widthTabletDown = '(max-width: 992px)'
widthTabletOnly = widthTabletUp, widthTabletDown
widthDesktopOnly = '(min-width: 992px)'

body
	display: flex
	min-height: 100vh
	width: 100%
	flex-direction: column

main
	flex: 1 0 auto
	
.center-X
	position: absolute
	left: 50%
	transform: translateX(-50%)
	
.center-Y
	position: absolute
	top: 50%
	transform: translateY(-50%)
	
.center-XY
	position: absolute
	top: 50%
	left: 50%
	transform: translate(-50%, -50%)
	
.clearfix:after
	content: ""
	display: block
	clear: both